<div class="container">
    <div class="header_top-sec">
        <div class="top_right">
            @*Tạo form submit về action tìm kiếm*@
            @using (Html.BeginForm("LayTuKhoaTimKiem", "TimKiem"))
            {
                <input type="text" name="sTuKhoa" placeholder="Nhập sản phẩm cần tìm" />
                <input type="submit" value="Tìm" />
            }
        </div>
        <div class="top_left">
            <ul>
                @if (Session["TaiKhoan"] != null && Session["TaiKhoan"].ToString() != "")
                {
                    ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                    <li>Chào @tv.HoTen</li>
                    <li>|@Html.ActionLink("Đăng Xuất", "DangXuat", "Home")</li>
                }
                else
                {
                    <li class="top_link"><a href="@Url.Action("DangKy", "Home")"> Đăng ký </a>|</li>
                    <li class="top_link"><a href="/#" id="btnDangNhap">Đăng nhập</a></li>
                }

            </ul>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

<link rel="stylesheet" href="~/Content/css2/style.css" type="text/css" media="all">

<div class="forms23-block-hny">
    <div class="wrapper">
        <!-- if logo is image enable this
            <a class="logo" href="index.html">
              <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
            </a>
        -->
        <div class="d-grid forms23-grids">
            <div id="popup_login">
                <div class="form23">
                    <div class="main-bg">
                        <div style="clear:both; text-align:right; margin-bottom:0;">
                            <span id="close-form" class="btn btn-danger">X</span>
                        </div>
                        <h6 class="sec-one">Đăng nhập</h6>
                        <div class="speci-login first-look">
                            <img src="~/Content/images/user.png" alt="" class="img-responsive" style="margin-left:14px;">
                        </div>
                    </div>
                    <div class="bottom-content">
                        @using (Ajax.BeginForm("DangNhap", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ThongBao" }))
                        {

                            <input type="text" name="txtTenDangNhap" class="input-form" placeholder="Tài Khoản" required="required">
                            <input type="password" name="txtMatKhau" class="input-form" placeholder="Mật Khẩu" required="required">
                            <button type="submit" class="loginhny-btn btn">Đăng nhập</button>
                            <h4 style="font-weight:bold; color:red; text-align:center;" id="ThongBao"></h4>

                            <br />
                            <a class="btn btn-block btn-social btn-lg btn-facebook " href="Home/LoginFacebook">
                                <img src="~/Content/HinhAnh/800px-Facebook_logo_36x36.svg.png" width="30" height="40"/>
                                @*<img src="~/Content/HinhAnh/Facebook-2020-200.png" width="30" height="30" />*@
                                <i class="fa fa-facebook fa-fw"></i>
                                            Đăng nhập bằng Facebook

                            </a>

                        }
                        @*<p>Not a member yet? <a href="#">Join Now!</a></p>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
