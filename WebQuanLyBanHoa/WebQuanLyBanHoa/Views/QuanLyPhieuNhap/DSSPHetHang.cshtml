@using WebQuanLyBanHoa.Models
@using PagedList.Mvc

@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "DSSPHetHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2 style="margin-bottom:20px;">Danh sách sản phẩm sắp hết hàng</h2>

<table class="table">
    <tr style="background: radial-gradient(circle, rgba(239,126,217,1) 0%, rgba(142,124,207,1) 100%);">
        <th>
            Tên SP
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Mới
        </th>
        <th>
            Đã xoá
        </th>
        <th>
            Mã nhà cung cấp
        </th>
        <th>Tác vụ khác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                <img src="~/Content/HinhAnh/@Url.Content(item.HinhAnh)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaXoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNCC)
            </td>
            <td>@Html.ActionLink("Nhập hàng", "NhapHangDon",new { id = item.MaSP}, new { @target = "_blank"})</td>
        </tr>
    }
</table>

<div class="clearfix"> </div>
<div class="dlink" style="margin-top:20px;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("DSSPHetHang", new { page = page }))
</div>

<style>
    th, td {
        border: 2px solid grey;
    }
    th{
        color: white;
    }
    tr {
        border-top: 2px solid grey;
    }
</style>