@using WebQuanLyBanHoa.Models
@using PagedList.Mvc

@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Quản lý sản phẩm</h2>

<p style="font-size:24px;">
    @Html.ActionLink("Thêm sản phẩm", "TaoMoi")
</p>
<hr />
<table class="table">
    <tr style="background: radial-gradient(circle, rgba(252,70,107,1) 0%, rgba(223,214,22,1) 100%);">
        <th>
            Tên SP
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mô tả
        </th>
        @*<th>
            Mới
        </th>*@
        <th>
            Đã xoá
        </th>
        <th>
            Mã nhà cung cấp
        </th>
        <th>Tác vụ khác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                <img src="~/Content/HinhAnh/@Url.Content(item.HinhAnh)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Moi)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DaXoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)
            </td>
            <td>
                @Html.ActionLink("Sửa", "ChinhSua", new { id = item.MaSP }) |
                @Html.ActionLink("Xoá", "Xoa", new { id = item.MaSP })
            </td>
        </tr>
    }


</table>
<div class="clearfix"> </div>
<div class="dlink" style="margin-top:20px;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    th, td {
        border: 2px solid grey;
    }

    tr {
        border-top: 2px solid grey;
    }
</style>